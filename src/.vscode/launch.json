    "version": "2.0.0",
    "configurations": [
      {
        "name": "Xoptfoil2 debug",
        "type": "cppdbg",
        
        "request": "launch",
        "program": "${workspaceFolder}/../windows/bin/xoptfoil2.exe",
        "args": ["-i", "JX-GP_bez.inp", "-o", "JX-GP_bez"], // Possible input args for a.out
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/../examples/JX-GP_bezier",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "preLaunchTask": "Build Xoptfoil2 debug",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
